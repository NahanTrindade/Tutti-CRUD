<div class="container">
    <h1>Atualizar Informações</h1>
    <form action="/update/{{colaborador.id}}" method="POST" class="form">
        <label for="nome">Nome completo</label>
        <input class="input" type="text" name="nome" id="nome" placeholder="{{colaborador.nome}}" required>
        <label for="cpf">CPF</label>
        <input class="input" type="text" name="cpf" id="cpf" placeholder="{{colaborador.cpf}}" required>
        <label for="setor">Setor</label>
        <input class="input" type="text" name="setor" id="setor" placeholder="{{colaborador.setor}}" required>

        <button class="button" type="submit">Atualizar</button>
    </form>
</div>